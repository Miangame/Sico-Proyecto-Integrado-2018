{% extends 'user/base.html.twig' %}
{% block body %}
    <h3 class="col s12">FCT</h3>
    <div class="row">
        <div class="col s12 p-0">
            <ul class="tabs z-depth-2 mb-2">
                <li class="tab col s3">
                    <a href="#emp" class="active">Empresas</a>
                </li>
                <li class="tab col s3">
                    <a href="#solemp">Solicitudes empresas</a>
                </li>
                <li class="tab col s3">
                    <a href="#asign">Asignaciones</a>
                </li>
            </ul>
        </div>
        <div id="emp" class="col s12 p-1">
            <h5>Empresas</h5>
            <div class="row">
                <div class="col s6 left-align">
                    <a class="waves-effect waves-light btn-small">
                        <i class="material-icons left">cloud_upload</i>Importar
                    </a>
                </div>
                <div class="col s6 right-align">
                    <a href="{{ path('user_fct_new_company') }}" class="waves-effect waves-light btn-small">
                        Nueva empresa
                    </a>
                </div>
            </div>

            <table class="responsive-table centered z-depth-1">
                <thead>
                <tr>
                    <th>Nombre</th>
                    <th>CIF</th>
                    <th>Mas info</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
                </thead>

                <tbody>
                {% for company in companies %}
                    <tr>
                        <td>{{ company.name }}</td>
                        <td>{{ company.cif }}</td>
                        <td>
                            <a href="{{ path('user_fct_show_company', {'id': company.id}) }}">
                                <i class="small material-icons">info</i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('user_fct_edit_company', {'id': company.id}) }}">
                                <i class="small material-icons">edit</i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('user_fct_delete_company', {'id': company.id}) }}">
                                <i class="small material-icons red-text">delete</i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div id="solemp" class="col p-1 s12 ">
            <h5>Solicitudes empresas</h5>
            <div class="row">
                <div class="col s12 right-align">
                    <a class="waves-effect waves-light btn-small">
                        <i class="material-icons left">cloud_upload</i>Importar
                    </a>
                </div>
            </div>

            <table class="responsive-table centered z-depth-1">
                <thead>
                <tr>
                    <th>Empresa</th>
                    <th>CIF</th>
                    <th>Alumnos solicitados</th>
                    <th>Mas info</th>
                    <th>Eliminar</th>
                </tr>
                </thead>
                <tbody>
                {% for request in request_companies %}
                    <tr>
                        <td>{{ request.name_company }}</td>
                        <td>{{ request.cif }}</td>
                        <td>{{ request.number_of_daw + request.number_of_asir }}</td>
                        <td>
                            <a href="#">
                                <i class="small material-icons">info</i>
                            </a>
                        </td>
                        <td>
                            <a href="#">
                                <i class="small material-icons red-text">delete</i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div id="asign" class="col p-1 s12">
            <h5>Asignaciones</h5>
            <div class="row">
                <div class="col s12 right-align">
                    <a href="{{ path('user_fct_new_distribution_company') }}" class="waves-effect waves-light btn-small">
                        Nueva asignaci√≥n
                    </a>
                </div>
            </div>

            <table class="responsive-table centered z-depth-1">
                <thead>
                <tr>
                    <th>Empresa</th>
                    <th>Alumno</th>
                    <th>Tutor</th>
                    <th>Modificar</th>
                    <th>Eliminar</th>
                </tr>
                </thead>
                <tbody>
                {% for distribution in distribution_companies %}
                    <tr>
                        <td>{{ distribution.company_name }}</td>
                        <td>{{ distribution.student_name }}</td>
                        <td>{{ distribution.user_name }}</td>
                        <td>
                            <a href="{{ path('user_fct_edit_distribution_company',{'id': distribution.id}) }}">
                                <i class="small material-icons">edit</i>
                            </a>
                        </td>
                        <td>
                            <a href="{{ path('user_fct_delete_distribution_company',{'id': distribution.id}) }}">
                                <i class="small material-icons red-text">delete</i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
