{% extends 'user/base.html.twig' %}
{% block body %}
    <h3 class="col s12">Configuración de la web</h3>
    <div class="row">
        <div class="col s12 p-0 br-1">
            <h4>Usuario</h4>
            <blockquote class="grey-text">
                * Convocatoria que se desea administrar en la web como puede ser FCT, PI, Reparto...etc. Todos los
                los cambios se aplicarán sobre la misma.
            </blockquote>
            {{ form_start(formConfigConvocatory, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(formConfigConvocatory) }}
            {{ form_end(formConfigConvocatory) }}

            <h5 class="mt-4">Cambiar contraseña</h5>
            <blockquote class="grey-text">
                * Puedes cambiar la contraseña si te es necesario.
            </blockquote>
            <a href="{{ path('fos_user_resetting_request') }}" class="waves-effect waves-light btn">Cambiar mi contraseña</a>
        </div>
        <div class="col s12 mt-4 br-1">
            <h4>General</h4>
            {{ form_start(formConfigGlobal, {'attr': {'novalidate': 'novalidate'}}) }}
            {{ form_widget(formConfigGlobal) }}
            {{ form_end(formConfigGlobal) }}
        </div>

    </div>

{% endblock %}
